# SQLite Database Configuration
SQLITE_DB_PATH=./evrmore_authentication/data/evrmore_auth.db

# JWT Configuration
# Generate a secure secret key for production using: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=60
JWT_REFRESH_TOKEN_EXPIRES=1440
JWT_ISSUER=manticore-evrmore-auth
JWT_AUDIENCE=manticore-clients

# Challenge Configuration
CHALLENGE_EXPIRE_MINUTES=15

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Additional Configuration
DEBUG_MODE=True  # Set to False in production
EVRMORE_NODE_URL=http://127.0.0.1:8819  # Your Evrmore node URL
EVRMORE_RPC_USER=rpcuser  # Your Evrmore RPC username
EVRMORE_RPC_PASSWORD=rpcpassword  # Your Evrmore RPC password 