# Evrmore Authentication - Environment Variables Example
# Copy this file to .env and adjust for your environment

# Database configuration
DB_TYPE=postgresql    # postgresql or sqlite
SQLITE_DB_PATH=/app/data/evrmore_auth.db  # Used only if DB_TYPE=sqlite

# PostgreSQL settings (used only if DB_TYPE=postgresql)
DB_HOST=db           # Use 'db' for Docker, 'localhost' otherwise
DB_PORT=5432
DB_NAME=evrmore_auth
DB_USER=postgres
DB_PASSWORD=postgres

# JWT configuration
JWT_SECRET=your-secret-key-replace-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Challenge configuration
CHALLENGE_EXPIRE_MINUTES=10

# Evrmore node configuration
EVRMORE_RPC_HOST=localhost  # Change to your Evrmore node address
EVRMORE_RPC_PORT=8819
EVRMORE_RPC_USER=your_username
EVRMORE_RPC_PASSWORD=your_password

# REST API Settings
CORS_ORIGINS=http://localhost:3000,https://yourapp.com
DEBUG=false 